{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": ["src/**/*", "db/**/*", "logger/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {}, 
  "compilerOptions": {
    "esModuleInterop": true,							 
    "lib": ["es2023"], 
    "module": "node16",
    "target": "es2022",
    "moduleResolution": "node16",
    "allowImportingTsExtensions": true,
    "paths": {
      "@/*": ["src/*"],
      "@db/*": ["db/*"],
      "@logger/*": ["logger/*"],
      "@logs/*": ["logs/*"]
    }
  }
}
